pipeline {
    agent {
            kubernetes {
                cloud 'eks'
                inheritFrom 'python'
            }
        }


    stages {
        stage('Build') {
            steps {
                script {
                    sh 'cd ./python'
                    sh 'docker build -t docker.io/samahalisaber/python-task:latest .'
                    sh 'docker push docker.io/samahalisaber/python-task:latest'
                }
            }
        }
        stage('Deploy') {
            steps {
                    sh 'kubectl apply -f yamls/deploy.yaml -n python'
                    sh 'kubectl apply -f yamls/svc.yaml -n python'
                    sh 'kubectl apply -f yamls/ingress.yaml -n python'
            }
        }
    }
}
